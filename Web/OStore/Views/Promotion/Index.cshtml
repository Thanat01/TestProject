@model OStore.Models.PromotionViewModel

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="col-lg-12">
    <h1 class="page-header">Promotion</h1>
</div>




<div class="row">
    <div class="col-xs-12">
        <div class="panel">
            <div class="panel-body">
                <ul class="nav nav-tabs">

                    <li class="active">
                        <a href="#Create" data-toggle="tab">Create new promotion code</a>
                    </li>

                </ul>
                <div class="tab-content">
                    <div class="tab-pane fade in active" style="margin-top:30px;" id="Create">
                        <div class="col-md-12">
                            @Html.Action("CreateNewPromotion", "Promotion")
                        </div>
                    </div>

                </div>
            </div>

        </div>
    </div>
</div>