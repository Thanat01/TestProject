@{
    ViewBag.Title = "ImageBulkUpload";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <h2>@GlobalResources.StringResource.Product_Import_BulkUpload_Title</h2>
</div>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">

        <div class="form-group">
            <div class="col-md-10">
                <h2>@GlobalResources.StringResource.Product_Import_BulkUpload_Title_Description</h2>
            </div>
            <div class="col-md-10">
                @Html.Raw(HttpUtility.HtmlDecode(@GlobalResources.StringResource.Product_Import_Excel_Warning))
            </div>
        </div>

    </div>

    <div class="form-group">
        <span class="col-md-10"><h3>@GlobalResources.StringResource.Product_Import_BulkUpload_Header</h3></span>
        <div class="col-md-12">
            @Html.FileUploadForm("../Product/BulkImageUpload")
        </div>
    </div>


    <div class="col-md-12 form-inline text-right">
        <div class="btn btn-default">
            @Html.ActionLink("Save", "ImageBulkUploadList", "Product")
        </div>
        <a class="btn btn-default" onclick="">Cancel</a>
        <a class="btn btn-default" onclick="">Apply</a>
    </div>
}
